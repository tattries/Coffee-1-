@model CoffeeTracker.Models.CoffeeItems

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<b>@ViewBag.Id</b>
<h4>CoffeeItems</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group" hidden="hidden" >
                <label asp-for="ProfileId" class="control-label"></label>
                <input asp-for="ProfileId" class="form-control" value=@ViewBag.ProfileId/>
                <span asp-validation-for="ProfileId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreationDate" class="control-label"></label>
                <input asp-for="CreationDate" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="CreationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoffeeType" class="control-label"></label>
                <select asp-for="CoffeeType" class="form-control" asp-items="Html.GetEnumSelectList<CoffeeType>()"></select>
                <span asp-validation-for="CoffeeType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoffeeSize" class="control-label"></label>
                <select asp-for="CoffeeSize" class="form-control" asp-items="Html.GetEnumSelectList<CoffeeSize>()"></select>
                <span asp-validation-for="CoffeeSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href='javascript:history.go(-1)'>Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
